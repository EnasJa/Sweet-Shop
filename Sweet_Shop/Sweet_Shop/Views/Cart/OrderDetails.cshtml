@model List<(Order order, Product product)>

@{
    // Calculate total price
    float totalPrice = Model.Sum(item => item.product.price * item.order.Quantity);
    float TotalAmount = totalPrice + 20;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details</title>
    <style>
        body {
            font-family: Fantasy, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .shopping-cart-container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            color: #54352b;
        }

        .alert {
            padding: 10px;
            margin-bottom: 20px;
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
            color: #721c24;
            border-radius: 4px;
        }

        ul {
            list-style-type: none;
            padding: 0;
        }

        li {
            border-bottom: 1px solid #ddd;
            padding: 10px 0;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

            li:last-child {
                border-bottom: none;
            }

        h3 {
            margin: 0;
            color: #54352b;
        }

        p {
            margin: 0;
            color: #54352b;
        }

        .price {
            margin-right: 10px; /* Adjust the margin between the price and the remove button */
        }

        form {
            display: inline-block;
        }

        button {
            padding: 5px 10px;
            background-color: #54352b;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            button:hover {
                background-color: #321f18;
            }

        a {
            color: #007bff;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        .empty-cart {
            text-align: center;
            color: #54352b;
        }
    </style>
</head>
<body>
    <div class="shopping-cart-container">

        <h2>Order Details</h2>

        @if (Model.Any())
        {
            <ul>
                @foreach (var orderDetail in Model)
                {
                    <li>
                        <img src="@orderDetail.product.imageUrl" alt="@orderDetail.product.Name" width="100" height="100">
                        <span>@orderDetail.product.Name</span>

                        <p>Price: @(orderDetail.product.IsOnSale ? orderDetail.product.salePrice : orderDetail.product.price)</p>

                        <span>Quantity: @orderDetail.order.Quantity</span>
                       
                    </li>
                }
                <p>Price: @totalPrice</p>
                <p>shipping: 20</p>
                <p>Total Amount : @TotalAmount</p>
            </ul>
        }
        
    </div>
</body>

