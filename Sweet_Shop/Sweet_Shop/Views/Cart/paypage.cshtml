@model PaymentModel

<h2>Checkout</h2>

<form asp-controller="Cart" asp-action="PlaceOrder" method="post">
    <div>
        <label for="cardNumber">Card Number:</label>
        <input type="text" id="cardNumber" name="CardNumber" asp-for="CardNumber" required>
        <div class="text-danger">
            @Html.ValidationMessageFor(model => model.CardNumber)
        </div>
    </div>

    <div>
        <label for="expiryDate">Expiry Date:</label>
        <input type="text" id="expiryDate" name="ExpiryDate" asp-for="ExpiryDate" required>
        <div class="text-danger">
            @Html.ValidationMessageFor(model => model.ExpiryDate)
        </div>
    </div>

    <div>
        <label for="cvc">CVC:</label>
        <input type="text" id="cvc" name="CVC" asp-for="CVC" required>
        <div class="text-danger">
            @Html.ValidationMessageFor(model => model.CVC)
        </div>
    </div>

    <div>
        <label for="cardholderID">Cardholder ID:</label>
        <input type="text" id="cardholderID" name="CardholderID" asp-for="CardholderID" required>
        <div class="text-danger">
            @Html.ValidationMessageFor(model => model.CardholderID)
        </div>
    </div>

    <div class="order-summary">
        <h2>Order Summary</h2>
        <p>Total Price For The Products: @Model.Cart.GetTotalAmount()</p>
        <p>Delivery Price: 20</p> <!-- Example delivery price, replace with actual logic -->
        <p>Total Price: @(Model.Cart.GetTotalAmount() + 20)</p>
    </div>

    <button type="submit">Place Order</button>
</form>





