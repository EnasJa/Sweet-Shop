<!DOCTYPE html>
<html lang="en">


<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
    }

    .payment-container {
        max-width: 600px;
        margin: 20px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h1, h2 {
        text-align: center;
    }

    .order-summary {
        margin-bottom: 20px;
    }

    .payment-form label {
        display: block;
        margin-bottom: 5px;
    }

    .payment-form input[type="text"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    .payment-form button {
        width: 100%;
        padding: 10px;
        background-color: #524347;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        .payment-form button:hover {
            background-color: #524347;
        }

    .overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5); /* Semi-transparent black */
        display: none;
        z-index: 9999; /* Ensure it's above other elements */
    }

    .successMessage {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: #dff0d8; /* Bootstrap success alert color */
        padding: 20px;
        border-radius: 5px;
        display: none;
        z-index: 10000; /* Ensure it's above overlay */
    }</style>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Page</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    


    <div class="payment-container">
        <h1>Payment Details</h1>
        <div class="order-summary">
            <h2>Order Summary</h2>
            <!-- Add more product details as needed -->
            <p>Total Price: <span id="total-price"></span></p>
        </div>
        @model Sweet_Shop.Models.PaymentModel
     
        <form asp-controller="Payment" asp-action="cheackPayment" method="POST" class="payment-form">
            <label for="cardNumber">Card Number:</label>
            <input type="text" id="cardNumber" name="CardNumber" asp-for="CardNumber">
            <span asp-validation-for="CardNumber" class="text-danger"></span>

            <label for="expiryDate">Expiry Date:</label>
            <input type="text" id="expiryDate" name="ExpiryDate" asp-for="ExpiryDate">
            <span asp-validation-for="ExpiryDate" class="text-danger"></span>

            <label for="cvc">CVC:</label>
            <input type="text" id="cvc" name="CVC" asp-for="CVC">
            <span asp-validation-for="CVC" class="text-danger"></span>

            <label for="cardholderID">Cardholder ID:</label>
            <input type="text" id="cardholderID" name="CardholderID" asp-for="CardholderID">
            <span asp-validation-for="CardholderID" class="text-danger"></span>

            <button type="submit" >Pay Now</button>
        </form>
       

    </div>

	  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script>
	            function clearCartItems() {
	            localStorage.removeItem("cartItems");
	            }
	            $(document).ready(function () {
	            // Retrieve total price from query parameter
	            var totalPrice = parseFloat(getParameterByName('totalPrice'));

	            // Display total price  
	            $("#total-price").text("$" + totalPrice.toFixed(2));

	            $("form.payment-form").submit(function () {
	            clearCartItems(); // Clear cart items from localStorage
	            });

	            });

	            // Function to get query parameter by name
	            function getParameterByName(name, url) {
	            if (!url) url = window.location.href;
	            name = name.replace(/[\[\]]/g, '\\$&');
	            var regex = new RegExp('[?&]' + name + '(=([^&#]*)|&|#|$)'),
	            results = regex.exec(url);
	            if (!results) return null;
	            if (!results[2]) return '';
	            return decodeURIComponent(results[2].replace(/\+/g, ' '));
	            }
	</script>
    
 
</body>



  





</html>
