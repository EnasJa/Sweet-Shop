@model Sweet_Shop.Models.Product

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <img src="@Model.imageUrl" class="card-img-top" alt="@Model.Name">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="card-text">Category: @Model.category</p>
                    <p class="card-text">
                        @if (Model.IsOnSale)
                        {
                            <span class="sale-price">Sale: $@Model.salePrice</span>
                            <span class="original-price">$<del>@Model.price</del></span>
                        }
                        else
                        {
                            <span class="regular-price">$@Model.price</span>
                        }
                    </p>
                    <p class="card-text">Stock: @Model.stock</p>
                </div>
            </div>
        </div>
    </div>
</div>
