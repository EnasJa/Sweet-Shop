@model Sweet_Shop.Models.Product

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Stock</title>

    <style>
        <style >
        /* CSS styles provided by you */
        body {
            font-family: Fantasy, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .container {
            max-width: 1200px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-control {
            width: 100%;
            padding: 8px;
            border-radius: 4px;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }

        .buttonBlueColor {
            display: inline-block;
            padding: 8px 16px;
            font-size: 16px;
            font-weight: bold;
            text-align: center;
            text-decoration: none;
            background-color: rgba(0, 0, 0, 0.1);
            color: #000;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .buttonBlueColor:hover {
                background-color: rgba(0, 0, 0, 0.1);
            }

        .buttonRedColor {
            display: inline-block;
            padding: 8px 16px;
            font-size: 16px;
            font-weight: bold;
            text-align: center;
            text-decoration: none;
            background-color: #ff6347; /* Coral color */
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .buttonRedColor:hover {
                background-color: #dc143c; /* Crimson color */
            }
    </style></style>
</head>
<body>
    <div class="container">
        <div class="errorMessagesDiv">
            @if (ViewBag.ErrorMessage != null)
            {
                <span class="validation-error">@ViewBag.ErrorMessage</span>

                <br />
            }
        </div>
        <div class="editForm">
            <h2>Edit Product</h2>
            <form method="post" action="/products/UpdateProduct">
                <input type="hidden" name="Id" value="@Model.Id" />

                <div class="form-group">
                    <label for="Name">Name:</label>
                    <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" readonly>
                </div>
                <div class="form-group">
                    <label for="Price">Price:</label>
                    <input type="number" class="form-control" id="Price" name="Price" value="@Model.price" readonly>
                </div>
                <div class="form-group">
                    <label for="Stock">Stock:</label>
                    <input type="number" class="form-control" id="Stock" name="Stock" value="@Model.stock">
                    <span asp-validation-for="stock" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="SalePrice">Sale Price:</label>
                    <input type="number" class="form-control" id="SalePrice" name="SalePrice" value="@Model.salePrice" readonly>
                </div>
                <div class="form-group">
                    <label for="ImageUrl">Image URL:</label>
                    <input type="text" class="form-control" id="ImageUrl" name="ImageUrl" value="@Model.imageUrl" readonly>
                </div>
                <div class="form-group">
                    <label for="Category">Category:</label>
                    <input type="text" class="form-control" id="Category" name="Category" value="@Model.category" readonly>
                </div>

                @*  <div class="form-group">
                <label for="IsOnSale">Is On Sale:</label>
                <input type="checkbox" id="IsOnSale" name="IsOnSale" @(Model.IsOnSale ? "checked" : "")>
                </div> *@
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsOnSale" disabled /> @Html.DisplayNameFor(model => model.IsOnSale)
                    </label>
                </div>

                <div class="buttons">
                    <button type="submit" class="buttonBlueColor">Update</button>
                    <a href="/products/ManageProducts" id="backButton" class="buttonRedColor">Back</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>

